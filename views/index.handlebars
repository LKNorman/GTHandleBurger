<div class="jumbotron jumbotron-fluid">
    <div class="container text-center">
        <img src="./assets/img/burger.png" alt="burger">
        <h1 class="display-4">Eat-Da-Burger!</h1>
    </div>
</div>

<hr id="borderline-top">

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <h6>Pick-A-Burger!</h6>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-6 is-devoured">
            <h6>No-More-Burger :(</h6>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<hr id="borderline-bottom">

<div class="container-fluid" id="make-a-burger">
    <div class="row">
        <div class="col-12 text-center">
            <h6>Make-A-Burger!</h6>
            <form class="create-form">
                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="ca" name="burger_name">
                </div>
                <button class="btn btn-success btn-sm" type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>